<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp" >

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/iw_inactives_item_user"
        android:src="@drawable/inactive_user"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"/>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/iw_inactives_item_computer"
        android:src="@drawable/inactive_computer"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"/>

    <TextView
        android:id="@+id/tw_inactives_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="160dp"
        android:text="Login"
        android:layout_marginLeft="30dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"/>

    <TextView
        android:id="@+id/tw_inactives_item_date"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Last Logon Date"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>