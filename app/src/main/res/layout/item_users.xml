<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp" >

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/iw_user_disabled"
        android:src="@drawable/user_disabled"
        android:layout_gravity="center_vertical"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"/>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/iw_user_enabled"
        android:src="@drawable/user_enabled"
        android:layout_gravity="center_vertical"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tw_users_item_sname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="30dp"
        android:layout_marginLeft="34dp"
        android:text="SamAccountName"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/tw_users_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_gravity="center_vertical"
        android:layout_alignTop="@+id/tw_users_item_sname"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/tw_users_item_sname"
        android:gravity="right" />
</RelativeLayout>